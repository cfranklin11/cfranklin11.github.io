---
import Base from "../../layouts/Base.astro";

const posts = await Astro.glob("./*.md");
---

<Base title="Blog">
  <h1>Blog</h1>
  <ul>
    {
      posts.reverse().map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
          <p>{post.frontmatter.excerpt || post.frontmatter.description}</p>
        </li>
      ))
    }
  </ul>
</Base>
